-- Functions
local function showNotification()
    notificationFrame.Visible = true
    local tweenInfo = TweenInfo.new(0.3, Enum.EasingStyle.Quart, Enum.EasingDirection.Out)
    -- Responsive notification positioning
    local targetPos = isMobile and UDim2.new(1, -260, 0, 20) or UDim2.new(1, -300, 0, 20)
    local hidePos = isMobile and UDim2.new(1, 20, 0, 20) or UDim2.new(1, 20, 0, 20)
    
    local tween = TweenService:Create(notificationFrame, tweenInfo, {Position = targetPos})
    tween:Play()
    
    wait(5)
    
    local hideTween = TweenService:Create(notificationFrame, tweenInfo, {Position = hidePos})
    hideTween:Play()
    hideTween.Completed:Connect(function()
        notificationFrame.Visible = false
    end)
end

local function addButtonHover(button, hoverColor, normalColor)
    button.MouseEnter:Connect(function()
        local hoverTween = TweenService:Create(button, TweenInfo.new(0.2), {BackgroundColor3 = hoverColor})
        hoverTween:Play()
    end)
    
    button.MouseLeave:Connect(function()
        local normalTween = TweenService:Create(button, TweenInfo.new(0.2), {BackgroundColor3 = normalColor})
        normalTween:Play()
    end)
end

-- Add hover effects
addButtonHover(freezeBtn, Color3.fromRGB(0, 86, 179), Color3.fromRGB(0, 122, 255))
addButtonHover(forceAcceptBtn, Color3.fromRGB(30, 126, 52), Color3.fromRGB(40, 167, 69))
addButtonHover(minimizeBtn, Color3.fromRGB(255, 200, 60), Color3.fromRGB(255, 189, 46))
addButtonHover(closeBtn, Color3.fromRGB(255, 120, 110), Color3.fromRGB(255, 95, 87))

-- Button Events
freezeBtn.MouseButton1Click:Connect(function()
    spawn(function()
        showNotification()
    end)
end)

forceAcceptBtn.MouseButton1Click:Connect(function()
    spawn(function()
        showNotification()
    end)
end)

-- Window Controls
closeBtn.MouseButton1Click:Connect(function()
    screenGui:Destroy()
end)

minimizeBtn.MouseButton1Click:Connect(function()
    mainFrame.Visible = not mainFrame.Visible
end)

-- Make GUI draggable
local dragging = false
local dragStart = nil
local startPos = nil

titleBar.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        dragging = true
        dragStart = input.Position
        startPos = mainFrame.Position
    end
end)

titleBar.InputChanged:Connect(function(input)
    if dragging and input.UserInputType == Enum.UserInputType.MouseMovement then
        local delta = input.Position - dragStart
        mainFrame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
    end
end)

titleBar.InputEnded:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        dragging = false
    end
end)

print("Trade Scam Gag GUI Loaded Successfully!")
